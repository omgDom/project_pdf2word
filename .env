SECRET_KEY=your-secret-key-here
DATABASE_URL=sqlite:///app.db
UPLOAD_FOLDER=/var/www/simpledoc/app/uploads

# Base URL - Production domain
BASE_URL=https://www.simpledoc.io

# OAuth Credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_OAUTH_REDIRECT_URI=https://www.simpledoc.io/gmail/oauth2callback
GOOGLE_CLIENT_SECRETS_FILE=/var/www/simpledoc/a0+
GMAIL_ATTACHMENT_TYPES
app/credentials/client_secrets.json

GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_OAUTH_REDIRECT_URI=https://www.simpledoc.io/auth/github/callback

# Gmail Integration Settings
GMAIL_ATTACHMENT_TYPES=pdf,doc,docx
GMAIL_MAX_ATTACHMENT_SIZE=10485760  # 10MB in bytes
GMAIL_CREDENTIALS_DIR=/var/www/simpledoc/app/credentials

# Production Settings
FLASK_ENV=development
FLASK_DEBUG=1
SERVER_NAME=www.simpledoc.io 